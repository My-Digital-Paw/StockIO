<% content_for :title do %>
  Listing Products
<% end %>

<div class="row">
  <div class="five columns">
    <h2>List</h2>
  </div>
  <div class="seven columns">
    <p id="actionBar">
      <%= link_to "New", new_product_path %>
    </p>
  </div>
</div>

<div class="row">
  <div class="twelvecol last">
    <table>
      <thead>
        <th>Code</th>
        <th>Category</th>
        <th>Type</th>
        <th>Price</th>
        <th></th>
      </thead>

      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.code, product %></td>
          <td><%= link_to product.product_category.name, product.product_category %></td>
          <td><%= product.product_type %></td>
          <td><%= product.price %></td>
          <td class="right">
            <%= link_to "Edit", edit_product_path(product) %> | 
            <%= link_to "Delete", product, confirm: 'Are you sure?', method: :delete %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
