<% content_for :title do %>
  Product
<% end %>

<div class="row">
  <div class="twelve columns">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="five columns">
    <h2>Information</h2>
  </div>
  <div class="seven columns">
    <p id="actionBar">
      <%= link_to "Back", products_path %> | 
      <%= link_to "Edit", edit_product_path(@product) %>
    </p>
  </div>
</div>

<div class="row">
  <div class="four columns">
    <p>Code:</p>
    <h3><%= @product.code %></h3>

    <p>Category:</p>
    <h4><%= link_to @product.product_category.name, @product.product_category %></h4>

    <p>Type:</p>
    <h4><%= @product.product_type %></h4>
  </div>
  <div class="four columns">
    <p>Description:</p>
    <p><%= @product.description %></p>
  </div>
  <div class="four columns">
    <p>Picture:</p>
    <p><%= image_tag @product.picture.url %></p>
  </div>
</div>

<div class="row">
  <div class="four columns">
    <p>Price:</p>
    <h4><%= @product.price %></h4>
  </div>
</div>
